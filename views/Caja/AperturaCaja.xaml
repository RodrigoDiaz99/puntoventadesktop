<Window x:Class="punto_venta.AperturaCaja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:punto_venta"
        mc:Ignorable="d"
        Title="Apertura de caja" Height="278" Width="300">
    <Grid>
        <Grid Height="119" Width="140" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Efectivo inicial" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Width="141"/>
            <TextBox HorizontalAlignment="Center" Margin="0,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" x:Name="txtDineroInicial" Foreground="#FFFFF9F9" />
            <Button Content="Registrar dinero" HorizontalAlignment="Center" Margin="0,87,0,0" VerticalAlignment="Top" Click="btnDineroInicial" Width="141"/>

        </Grid>

    </Grid>
</Window>
