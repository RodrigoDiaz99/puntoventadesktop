<Window x:Class="punto_venta.membresias_vistas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:punto_venta"
        mc:Ignorable="d"
        Title="membresias_vistas" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGridMembresia" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
             
                <DataGridTextColumn Header="Nombre Membresia" Binding="{Binding nombre_membresia}" />
                <DataGridTextColumn Header="Descripcion" Binding="{Binding descripcion_membresia}" />
                <DataGridTextColumn Header="Dias Duracion" Binding="{Binding dias_membresia}" />
                <DataGridTextColumn Header="Precio" Binding="{Binding precio}" />
             

            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>
